---
// @ts-ignore
import { Icon } from "astro-icon";

const features = [
  {
    title: "Aprende ajedrez!",
    description:
      "Aprende ajedrez de forma gratuita y facil con tutoriales y problemas",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Mantente informado",
    description:
      "Mantente informato con las ultimas noticias de ajedrez!",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "On-Demand Components",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page.  ",
    icon: "bx:bxs-data",
  },
  {
    title: "Juega con nosotors",
    description:
      "Quieres probar tus abilidades? Puedes jugar con nosotros!",
    icon: "bx:bxs-bot",
  },
  {
    title: "Somos altruistas!",
    description:
      "Te ayudamos a promocionarte",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Communidad",
    description:
      "Tambien tenemos un discord!",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Todo lo que necesitas para ser el mejor en Chess!
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Este sitio web contiene tutoriales, noticias y problemas diarios!
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
